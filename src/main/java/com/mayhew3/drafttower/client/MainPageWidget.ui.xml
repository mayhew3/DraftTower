<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:com.mayhew3.drafttower.client">

  <ui:with field="style" type="com.mayhew3.drafttower.client.MainPageWidget.Resources"/>

  <g:HTMLPanel>
    <d:LoginWidget ui:field="loginWidget"/>
    <div ui:field="mainPage">
      <d:ConnectivityIndicator ui:field="connectivityIndicator" addStyleNames="{style.css.connectivityIndicator}"/>
      <div class="{style.css.rightColumn}">
        <d:DraftClock ui:field="clock"/>
        <d:PickWidget ui:field="pickWidget"/>
        <div class="{style.css.tableHeader}">
          Draft picks
        </div>
        <d:PickHistoryTablePanel ui:field="pickHistoryTable"/>
        <div class="{style.css.tableHeader}">
          Your roster
        </div>
        <d:MyRosterTablePanel ui:field="myRosterTable"/>
      </div>
      <div class="{style.css.leftColumn}">
        <d:TeamOrderWidget ui:field="teamOrder"/>
        <div class="{style.css.tableHeader}">
          Filled positions
        </div>
        <d:FilledPositionsChart ui:field="filledPositionsChart"/>
        <g:Label styleName="{style.css.actionLink}" ui:field="showDepthCharts">
          Show depth charts
        </g:Label>
        <g:Label styleName="{style.css.actionLink}" ui:field="showBarGraphs">
          Show team comparisons
        </g:Label>
      </div>
      <div class="{style.css.centerColumn}">
        <d:PlayerTablePanel ui:field="unclaimedPlayers"/>
        <div class="{style.css.queue}" ui:field="queueArea">
          <div class="{style.css.tableHeader}">
            Your queue
          </div>
          <g:ScrollPanel styleName="{style.css.queueScroller}" height="150px">
            <d:QueueTable ui:field="queueTable"/>
          </g:ScrollPanel>
        </div>
      </div>
    </div>
    <d:AudioController ui:field="audioController"/>
  </g:HTMLPanel>
</ui:UiBinder>