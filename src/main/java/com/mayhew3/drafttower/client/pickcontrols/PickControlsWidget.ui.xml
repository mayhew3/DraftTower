<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="style" type="com.mayhew3.drafttower.client.pickcontrols.PickControlsWidget.Resources"/>

  <g:HTMLPanel styleName="{style.css.container}">
    <g:HTML ui:field="selectedPlayerLabel">&nbsp;</g:HTML>
    <div>
      <g:Button ui:field="pick" styleName="{style.css.pickButton}">Pick</g:Button>
      <g:Button ui:field="enqueue" styleName="{style.css.pickButton}">Enqueue</g:Button>
      <g:Button ui:field="wakeUp" styleName="{style.css.pickButton}">Wake up!</g:Button>
    </div>
    <div ui:field="showCommishToolsContainer">
      <g:Anchor ui:field="showCommishTools" styleName="{style.css.showCommish}">Commish tools</g:Anchor>
    </div>
    <div ui:field="commishTools">
      <g:Button ui:field="forcePick" styleName="{style.css.pickButton} {style.css.commish}">Force pick</g:Button>
      <g:Button ui:field="reset" styleName="{style.css.pickButton} {style.css.commish}">Reset draft</g:Button>
      <g:Button ui:field="clearCaches" styleName="{style.css.pickButton} {style.css.commish}">Clear caches</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>