<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="style" type="com.mayhew3.drafttower.client.LoginWidget.Resources"/>

  <g:HTMLPanel>
    <div>
      Username: <g:TextBox ui:field="username"/>
    </div>
    <div>
      Password: <g:PasswordTextBox ui:field="password"/>
    </div>
    <div ui:field="error">Invalid login.</div>
    <div>
      <g:Button text="Login" ui:field="login"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>