<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="style" type="com.mayhew3.drafttower.client.PickWidget.Resources"/>

  <g:HTMLPanel styleName="{style.css.container}">
    <g:Label ui:field="selectedPlayerLabel">&nbsp;</g:Label>
    <div>
      <g:Button ui:field="pick">Pick</g:Button>
      <g:Button ui:field="enqueue">Enqueue</g:Button>
    </div>
    <div>
      <g:Button ui:field="forcePick" styleName="{style.css.force}">Force pick</g:Button>
      <g:Button ui:field="wakeUp">Wake up!</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>